---
interface Props {
  title: string;
}
const { title } = Astro.props;

import Script from "./LayoutScript.astro";
// Style
import "../../node_modules/@fortawesome/fontawesome-free/css/fontawesome.min.css";
import "../assets/plugins/css/AE.css";
import "../assets/scss/style.scss";
import "aos/dist/aos.css";
import 'swiper/css/bundle';
import "swiper/css/navigation";
import "swiper/css/pagination";


//compontents
import i18next from "i18next";
import { HeadHrefLangs } from "astro-i18next/components";
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
//
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
---

<!doctype html>
<html lang={i18next.language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/x-icon" href="/image/favicon.webp" />
    <title>{title}</title>
    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Almarai:wght@300;400;700;800&display=swap"
    />
    <HeadHrefLangs />
  </head>
  <body>
    <main>
      <Header />
      <slot />
      <Footer />
    </main>
    <Script />
  </body><style is:global lang="scss">
    :root {
      --main-l: #484848;
      --main-d: #2e2e2e;
      --hover: #dd3333;
      --bg: #f4f4f4;
      --MTsection: 10vh;
      --transition: 0.3s;
    }
    * {
      font-family: "Almarai";
    }
    body {
      background: var(--bg);
    }
    html[lang="en"] {
      direction: ltr;
      .icon-left,
      .icon-left-2 {
        left: 3px;
      }
      .drop-box-2 {
        .nav-link {
          text-align: left;
        }
      }
      .responsive-link {
        li {
          a {
            &:hover,
            &.active {
              transform: translateX(15px); //change
            }
          }
        }
      }
            .brief {
        .box-img {
          .img-1 {
            right: -50px;
            @media (max-width: 678px) {
              right: 0;
            }
          }
        }
      }
    }
    html[lang="ar"] {
      direction: rtl;
      .icon-left,
      .icon-left-2 {
        left: -3px;
      }
      .drop-box-2 {
        .nav-link {
          text-align: right;
        }
      }
      .responsive-link {
        li {
          a {
            &:hover,
            &.active {
              transform: translateX(-15px); //change
            }
          }
        }
      }

      .heroSlider {
        // .swiper-button-next{
        //     right: 72px !important;
        // }
        .swiper-button-prev {
          left: 72px !important;
          right: auto !important;
        }
      }
            .brief {
        .box-img {
          .img-1 {
            left: -50px;
            @media (max-width: 678px) {
              left: 0;
            }
          }
        }
      }
    }
    @media (max-width: 991px) {
      .order {
        order: 2;
      }
    }
  </style>
</html>
