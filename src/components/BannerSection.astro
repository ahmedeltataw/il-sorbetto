---
import { localizePath } from "astro-i18next";
import { t } from "i18next";
interface Props {
    title:string
}
const {title} = Astro.props;
---
<section class="breadcrumb relative pt-0">
    <div class="container">
        <ul class="d-flex justify-center align-items-center absolute top-50 left-50  ">
            <li class="fs-r-30"><a href={localizePath("/")}>{t("header.home")}</a></li>
            <li class="fs-r-30 px-3 ">/</li>
            <li class="fs-r-30">{title}</li>
        </ul>
    </div>
</section>
<style lang="scss">
    @import "../assets/scss/helper/_mixin.scss";
    .breadcrumb{
        min-height: 60vh;
        background: url("../assets/image/bg-banner.webp") no-repeat fixed;
        background-size: cover;
        background-position: center;
        

        &::before{
            @include overlay (#000 , .4);
            backdrop-filter: blur(.5px);
       
        }
        ul{
            transform: translate(-50%, -50%);
            li ,a{
            
              
                text-transform: capitalize;
                color: #fff;
                &:nth-child(3){
                    opacity: .7;
                    @media (max-width:480px){
                        font-size: 1.1rem;
                    }
                }
            }
            
        }
    }
</style>