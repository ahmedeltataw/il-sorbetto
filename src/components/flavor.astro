---
import MainHeading from "./mainHeading.astro";
import { localizePath } from "astro-i18next";
import { t } from "i18next";
import { Image } from "astro:assets";
// img
import img1 from "../assets/image/flavors/1.webp";
import img2 from "../assets/image/flavors/2.webp";
import img3 from "../assets/image/flavors/3.webp";
import img4 from "../assets/image/flavors/4.webp";
import img5 from "../assets/image/flavors/5.webp";
import img6 from "../assets/image/flavors/6.webp";
import img7 from "../assets/image/flavors/7.webp";
import img8 from "../assets/image/flavors/8.webp";
import img9 from "../assets/image/flavors/9.webp";
import img10 from "../assets/image/flavors/10.webp";
// flaver data
const FlavorData = [
    {
        tittle: t("flavor.type.t1"),
        href:"/",
        img: img4,
    },
    {
        tittle: t("flavor.type.t2"),
        href:"/",
        img: img2,
    },
    {
        tittle: t("flavor.type.t3"),
        href:"/",
        img: img9,
    },
    {
        tittle: t("flavor.type.t4"),
        href:"/",
        img: img6,
    },
    {
        tittle: t("flavor.type.t5"),
        href:"/",
        img: img8,
    },
    {
        tittle: t("flavor.type.t6"),
        href:"/",
        img: img5,
    },
    {
        tittle: t("flavor.type.t7"),
        href:"/",
        img: img1,
    },
    {
        tittle: t("flavor.type.t8"),
        href:"/",
        img: img10,
    },
    {
        tittle: t("flavor.type.t9"),
        href:"/",
        img: img3,
    },
    {
        tittle: t("flavor.type.t10"),
        href:"/",
        img: img7,
    },
]
---

<section class="flavor">
  <div class="container">
    <MainHeading title={t("mainHeading.flavor")} />
    <div class="details mb-12">
          <p>{t("flavor.des")}</p>
        </div>
    <!--  -->
      <div class="swiper flavorsSlider">
          <div class="swiper-wrapper">
                {
                    FlavorData.map((items)=>(
                        <div class="swiper-slide">
                            <a href={localizePath(items.href)} class="type-flavor">
                                <Image src={items.img} alt={items.tittle} format="avif" quality={60} />
                                <span class="type"> {items.tittle} </span>
                            </a>
                        </div>
                    ))
                }
          </div>
          <div class="swiper-pagination"></div>
        </div>
  </div>

</section>
<style lang="scss">
    .flavor{
        background-color: #fff;
        
        .details{
            p{
                font-size: 16px;
                color: var(--main-l);
                line-height: 1.8;
            }
        }

        .type-flavor{
            height: 220px;
            text-align: center;
                    display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        position: relative;
        overflow: hidden;
        img{
            transition: 1s ease-in-out;
            z-index: -1;
        }
        .type{
            font-size: 28px;
            color: #fff;
            padding: 5px 0;
            position: absolute;
            top: -100%;
            transition: .3s ease-in-out;
        }
            &::before{
                content: '';
                position: absolute;
                transition: .3s ease-in-out;
                top: -100%;
                left: 0;
                height: 100%;
                width: 100%;
                background-color: rgba(58, 58, 58, 0.44);
            }
            &:hover{
                &::before{
                    top: 0;
                }
                .type{
                    top: 50%;
                    transform: translateY(-50%);
                }
                img{
                    transform: scale(1.3);
                }
            }
        }
    }
</style>